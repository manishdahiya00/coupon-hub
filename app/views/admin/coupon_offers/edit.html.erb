<div id="page-wrapper">
  <div class="container-fluid">
    <div class="row">
      <div class="col-lg-12">
        <h2 class="page-header">Edit Coupon Offer</h2>
      </div>
      <div class="col-lg-6">
        <%= form_with(model: @offer, url: admin_coupon_offer_path) do |form| %>
          <div class="form-group">
            <%= form.label :name %>
            <%= form.text_field :name, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= form.label :coupon_store_id %>
            <%= form.select :coupon_store_id, options_for_select(CouponStore.all.pluck(:name, :id), @offer.coupon_store_id), {}, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= form.label :coupon_category_id %>
            <%= form.select :coupon_category_id, options_for_select(CouponCategory.all.pluck(:name, :id), @offer.coupon_category_id), {}, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= form.label :coupon_sub_category_id %>
            <%= form.select :coupon_sub_category_id, options_for_select(CouponSubCategory.all.pluck(:name, :id), @offer.coupon_sub_category_id), {}, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= form.label :status %>
            <%= form.select :status, options_for_select([['Active', 'active'], ['Inactive', 'inactive']], @offer.status), {}, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= form.label :short_desc %>
            <%= form.text_area :short_desc, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= form.label :long_desc %>
            <%= form.text_area :long_desc, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= form.label :country %>
            <%= form.select :country,options_for_select(["IN(INDIA)","BD(BANGLADESH)","ID(INDONESIA)","NG(NIGERIA)"], @offer.country), {}, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= form.label :payout_type %>
            <%= form.select :payout_type,options_for_select(["Callback","Install","Any"], @offer.payout_type), {}, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= form.label :shop_type %>
            <%= form.select :shop_type,options_for_select(["Browser","App","Web","Invite"], @offer.shop_type), {}, class: 'form-control' %>
          </div>
          <div class="actions">
            <%= form.submit 'Save', class: 'btn btn-primary' %>
            <%= link_to 'Cancel', admin_coupon_offers_path, class: 'btn btn-default' %>
          </div>
        </div>
        <div class="col-lg-6">
          <div class="form-group">
            <%= form.label :payout_cashback %>
            <%= form.text_field :payout_cashback, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= form.label :income_cashback %>
            <%= form.text_field :income_cashback, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= form.label :offer_type %>
            <%= form.text_field :offer_type, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= form.label :img_url %>
            <%= form.text_field :img_url, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= form.label :action_url %>
            <%= form.text_field :action_url, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= form.label :hindi_desc %>
            <%= form.text_area :hindi_desc, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= form.label :currency %>
            <%= form.text_field :currency, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= form.label :priority %>
            <%= form.text_field :priority, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= form.label :code_show_text %>
            <%= form.text_field :code_show_text, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= form.label :code_show_value %>
            <%= form.text_field :code_show_value, class: 'form-control' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<div id="page-wrapper">
  <div class="container-fluid">
    <div class="row">
      <div class="col-lg-12">
        <h2 class="page-header">New Category</h2>
      </div>
      <div class="col-lg-6">
        <%= form_with(model: @store, url: admin_coupon_stores_path) do |form| %>
          <div class="form-group">
            <%= form.label :coupon_category_id %>
            <%= form.select :coupon_category_id, options_for_select(CouponCategory.all.pluck(:name, :id), @store.coupon_category_id), {}, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= form.label :name %>
            <%= form.text_field :name, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= form.label :cashback %>
            <%= form.text_field :cashback, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= form.label :action_url %>
            <%= form.text_field :action_url, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= form.label :img_url %>
            <%= form.text_field :img_url, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= form.label :status %>
            <%= form.select :status, options_for_select([['Active', 'active'], ['Inactive', 'inactive']], @store.status), {}, class: 'form-control' %>
          </div>
          <div class="actions">
            <%= form.submit 'Save', class: 'btn btn-primary' %>
            <%= link_to 'Cancel', admin_coupon_stores_path, class: 'btn btn-default' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

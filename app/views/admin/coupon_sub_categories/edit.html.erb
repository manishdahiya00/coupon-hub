<div id="page-wrapper">
  <div class="container-fluid">
    <div class="row">
      <div class="col-lg-12">
        <h2 class="page-header">Edit Sub Category</h2>
      </div>
      <div class="col-lg-6">
        <%= form_with(model: @category,url: admin_coupon_category_coupon_sub_category_path) do |form| %>
          <div class="form-group">
            <%= form.hidden_field :coupon_category_id, value: CouponCategory.find(params[:coupon_category_id]).id, disabled: :true,class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= form.label :coupon_category_name %>
            <%= form.text_field :coupon_category_name, value: CouponCategory.find(params[:coupon_category_id]).name, disabled: :true,class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= form.label :name %>
            <%= form.text_field :name, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= form.label :status %>
            <%= form.select :status, options_for_select([['Active', 'active'], ['Inactive', 'inactive']], @category.status), {}, class: 'form-control' %>
          </div>
          <div class="actions">
            <%= form.submit 'Save', class: 'btn btn-primary' %>
            <%= link_to 'Cancel', admin_coupon_category_coupon_sub_categories_path, class: 'btn btn-default' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

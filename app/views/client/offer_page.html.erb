<div class="container mx-auto px-4 py-8">
  <div class="bg-white shadow-xl rounded-2xl overflow-hidden">
    <div class="p-6 sm:p-10">
      <h1 class="text-3xl sm:text-4xl font-bold mb-6 text-gray-800"><%= @offer.name %></h1>
      <div class="flex flex-col lg:flex-row gap-8">
        <%= image_tag @offer.img_url, class: "w-full lg:w-80 h-80 object-cover rounded-lg shadow-md" %>
        <div class="flex-1 space-y-6">
          <p class="text-lg sm:text-xl text-gray-600"><%= @offer.short_desc %></p>
          <span class="inline-flex items-center px-3 py-1.5 rounded-full text-sm font-medium bg-blue-100 text-blue-800">
            <%= @offer.payout_cashback %>
          </span>
          <div>
            <h2 class="text-xl font-semibold text-gray-800 mb-2">Description</h2>
            <p class="text-gray-600"><%= @offer.long_desc %></p>
          </div>
          <%= link_to offer_show_path(@offer), target: "_blank", rel: "noopener noreferrer", class: "inline-flex items-center px-4 py-2 border border-transparent text-base font-medium rounded-md shadow-sm text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors duration-200" do %>
            Go to Website
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
            </svg>
          <% end %>
        </div>
      </div>
    </div>
    <div class="bg-gray-50 px-6 py-8 sm:px-10">
      <h2 class="text-2xl font-bold mb-6 text-gray-800">Related Offers</h2>
      <div class="flex flex-nowrap overflow-x-auto gap-6 pb-4">
        <% if @offers.any? %>
          <% @offers.each do |offer| %>
            <%= link_to "/offer/#{offer.id}", class: "group flex-shrink-0" do %>
              <div class="bg-white rounded-lg shadow-md overflow-hidden transition transform hover:scale-105">
                <%= image_tag offer.img_url, class: "w-40 h-40 object-cover" %>
                <div class="p-4">
                  <p class="text-sm font-medium text-gray-900 group-hover:text-blue-600 transition">
                    <%= truncate(offer.payout_cashback, length: 20) %>
                  </p>
                </div>
              </div>
            <% end %>
          <% end %>
        <% else %>
          <p class="text-center text-gray-500 w-full">No Related Offers Found</p>
        <% end %>
      </div>
    </div>
  </div>
</div>

<%= link_to offer_path(offer), class: "block transition-transform hover:scale-105" do %>
  <div class="w-80 h-96 bg-white rounded-xl shadow-lg overflow-hidden flex flex-col">
    <div class="h-2/3 overflow-hidden">
      <%= image_tag offer.img_url, class: "w-full h-full object-cover transition-transform hover:scale-110" %>
    </div>
    <div class="p-4 flex-grow flex flex-col justify-between">
      <div>
        <h3 class="text-2xl font-bold text-green-600 mb-2"><%= offer.payout_cashback %></h3>
        <p class="text-sm text-gray-600 line-clamp-3"><%= offer.long_desc %></p>
      </div>
      <div class="flex justify-end mt-2">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 text-gray-400">
          <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5L21 12m0 0l-7.5 7.5M21 12H3" />
        </svg>
      </div>
    </div>
  </div>
<% end %>
